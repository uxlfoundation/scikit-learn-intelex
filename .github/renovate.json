{
  "dependencyDashboard": false,
  "extends": [
    "config:recommended",
    ":preserveSemverRanges"
  ],
  "pip_requirements": {
    "managerFilePatterns": [
      "/(^|/)requirements.*\\.txt$/",
      "/(^|/)dependencies-dev$/"
    ]
  },
  "packageRules": [
    {
      "groupName": "Doc packages",
      "matchUpdateTypes": ["patch", "minor"],
      "schedule": ["before 2am on the first day of the month"],
      "matchFileNames": ["requirements-doc.txt"]
    },
    {
      "groupName": "numpy build dependencies",
      "matchPackageNames": ["numpy"],
      "matchFileNames": ["dependencies-dev", "conda-recipe/meta.yaml"]
    }
  ],
  "pre-commit": {
    "enabled": true
  },
"customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.ci/pipeline/build-and-test-lnx\\.yml$/",
        "/^\\.github/workflows/ci\\.yml$/"
      ],
      "matchStrings": [
        "\\s*DPCTL_VERSION: (?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "dpctl",
      "datasourceTemplate": "pypi"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.ci/pipeline/build-and-test-lnx\\.yml$/",
        "/^\\.github/workflows/ci\\.yml$/"
      ],
      "matchStrings": [
        "\\s*DPNP_VERSION: (?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "dpnp",
      "datasourceTemplate": "pypi"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^\\.ci/pipeline/build-and-test-lnx\\.yml$/"],
      "matchStrings": [
        "\\s*DPCPP_RT_VERSION: (?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "dpcpp-cpp-rt",
      "datasourceTemplate": "pypi"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^\\.ci/pipeline/linting\\.yml$/"],
      "matchStrings": ["pre-commit==(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "pre-commit",
      "datasourceTemplate": "pypi"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^\\.ci\\/scripts\\/install_dpcpp\\.sh$/"],
      "matchStrings": [
        ".*\\b(?<depName>intel-oneapi-compiler-dpcpp-cpp)=(?<currentValue>\\d{4}\\.\\d+\\.\\d+-\\d+).*"
      ],
      "datasourceTemplate": "deb",
      "registryUrlTemplate": "https://apt.repos.intel.com/oneapi?suite=all&components=main&binaryArch=amd64"
    },
    {
      "customType": "regex",
      "description": "Numpy in conda meta.yaml - keep aligned with dependencies-dev",
      "managerFilePatterns": ["/^conda-recipe\\/meta\\.yaml$/"],
      "matchStrings": [
        "- numpy ==(?<currentValue>\\d+\\.\\d+\\.\\d+)\\s+#\\s+\\[py[<>=]{1,2}\\d+\\]"
      ],
      "depNameTemplate": "numpy",
      "datasourceTemplate": "pypi"
    }
  ]
}

