{
  "dependencyDashboard": false,
  "extends": [
    "config:recommended",
    ":preserveSemverRanges"
  ],
  "pip_requirements": {
    "fileMatch": [
      "(^|/)requirements.*\\.txt$",
      "(^|/)dependencies-dev$"
    ]
  },
  "packageRules": [
    {
      "groupName": "Doc packages",
      "matchUpdateTypes": ["patch", "minor"],
      "schedule": ["before 2am on the first day of the month"],
      "matchFileNames": ["requirements-doc.txt"]
    }
  ],
  "pre-commit": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^\\.ci\\/pipeline\\/build-and-test-lnx\\.yml$","^\\.github\\/workflows\\/ci\\.yml$"],
      "matchStrings": ["DPCTL_VERSION: (?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "IntelPython/dpctl",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": ["^\\.ci\\/pipeline\\/build-and-test-lnx\\.yml$","^\\.github\\/workflows\\/ci\\.yml$"],
      "matchStrings": ["DPNP_VERSION: (?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "IntelPython/dpnp",
      "datasourceTemplate": "github-releases"
    }
  ]
}
